<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_theprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_startintentservice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100%"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_theprogress"
        app:layout_constraintStart_toStartOf="@id/tv_theprogress"
        app:layout_constraintEnd_toEndOf="@id/tv_theprogress"/>

    <Button
        android:id="@+id/btn_startintentservice"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="52dp"
        android:text="START INTENT SERVICE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_startservice"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="START SERVICE"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_startintentservice"
        app:layout_constraintRight_toLeftOf="@id/btn_startintentservice"/>

</android.support.constraint.ConstraintLayout>